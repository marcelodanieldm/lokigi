# ==============================================
# LOKIGI - Environment Variables Configuration
# ==============================================
# Copy this file to .env and fill in your actual values

# ===============================
# Database Configuration
# ===============================
# For Local Development (SQLite):
DATABASE_URL=sqlite:///./lokigi.db

# For Production (Supabase PostgreSQL):
# Get this from: Supabase Dashboard > Settings > Database > Connection String (URI)
# Format: postgresql://postgres:[YOUR-PASSWORD]@[PROJECT-REF].supabase.co:5432/postgres
# SUPABASE_DB_URL=postgresql://postgres:your_password@db.xxxxx.supabase.co:5432/postgres

# ===============================
# AI Services
# ===============================
# Google Gemini API (FREE - Recommended)
# Get your key from: https://makersuite.google.com/app/apikey
# Free tier: 60 requests/minute, 1,500 requests/day
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API (DEPRECATED - Use Gemini instead)
# Only needed if you want to use OpenAI instead of Gemini
# OPENAI_API_KEY=sk-proj-tu_api_key_aqui

# ===============================
# Payment Gateway (Stripe)
# ===============================
# Get these from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_51xxx...  # Use sk_test_ for testing, sk_live_ for production
STRIPE_WEBHOOK_SECRET=whsec_xxx...  # Get this when creating webhook in Stripe Dashboard

# Stripe Webhook Configuration:
# 1. Go to: https://dashboard.stripe.com/webhooks
# 2. Create endpoint: https://your-domain.com/api/stripe/webhook
# 3. Select events: checkout.session.completed, payment_intent.succeeded
# 4. Copy the "Signing secret" above

# ===============================
# Frontend Configuration
# ===============================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# ===============================
# Internationalization (i18n)
# ===============================
# Default language if IP detection fails
DEFAULT_LANGUAGE=en  # Options: en, es, pt

# Override language detection (for testing)
# FORCE_LANGUAGE=es  # Uncomment to force a specific language

# ===============================
# Authentication
# ===============================
# Generate a secure random string for JWT tokens
# You can use: openssl rand -hex 32
SECRET_KEY=your_super_secret_jwt_key_at_least_32_characters_long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===============================
# Email Configuration (Optional)
# ===============================
# For sending audit reports and notifications
# Required for Worker Dashboard completion emails

# Option 1: Gmail (Free - 500 emails/day)
# 1. Enable 2FA in your Google Account
# 2. Generate App Password: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_16_char_app_password
FROM_EMAIL=noreply@lokigi.com
FROM_NAME=Lokigi SEO Team

# Option 2: Brevo (SendinBlue) - Free 300 emails/day
# SMTP_HOST=smtp-relay.brevo.com
# SMTP_PORT=587
# SMTP_USER=your_brevo_email@example.com
# SMTP_PASSWORD=your_brevo_smtp_key

# Option 3: Mailgun - Free 5,000 emails/month
# SMTP_HOST=smtp.mailgun.org
# SMTP_PORT=587
# SMTP_USER=postmaster@your-domain.mailgun.org
# SMTP_PASSWORD=your_mailgun_password

# SendGrid API (Alternative)
# SENDGRID_API_KEY=SG.xxx...

# ===============================
# Application Settings
# ===============================
# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode (verbose logging)
DEBUG=True
